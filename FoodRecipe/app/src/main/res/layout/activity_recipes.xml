<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.monic.foodrecipe.Recipes">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="29dp"
        android:text="@string/title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="29dp"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="@string/ingredients"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ingredients"
        android:layout_alignBottom="@+id/ingredients"
        android:layout_toEndOf="@+id/imageButton3" />

    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/url"
        android:layout_below="@+id/ingredients"
        android:layout_alignStart="@+id/ingredients" />

    <TextView
        android:id="@+id/urllink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/url"
        android:layout_alignBottom="@+id/url"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/first" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/previous" />

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:text="@string/finish" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/finish"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/imageButton5"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/next" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginEnd="15dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/last" />
</RelativeLayout>
